generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NITRO_DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String       @db.VarChar()
  email      String       @unique()
  password   String       @db.VarChar()
  createdAt  DateTime     @default(now()) @db.Timestamp(6)
  updatedAt  DateTime     @updatedAt @db.Timestamp(6)
  Collection Collection[]
}

model Artwork {
  id          String       @id @db.VarChar()
  title       String       @db.VarChar()
  description String?      @db.Text()
  url         String?      @db.VarChar()
  creditLine  String?      @db.VarChar()
  date        String?      @db.VarChar()
  origin      String?      @db.VarChar()
  medium      String?      @db.VarChar()
  createdAt   DateTime     @default(now()) @db.Timestamp(6)
  updatedAt   DateTime     @updatedAt @db.Timestamp(6)
  images      Image[]
  collections Collection[]
}

model Image {
  id         String   @id @db.VarChar()
  urlPreview String   @db.VarChar()
  urlFull    String   @db.VarChar()
  createdAt  DateTime @default(now()) @db.Timestamp(6)
  artworkId  String   @db.VarChar()
  artwork    Artwork  @relation(fields: [artworkId], references: [id])
}

model Collection {
  id        Int       @id @default(autoincrement())
  title     String    @db.VarChar()
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @updatedAt @db.Timestamp(6)
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  artworks  Artwork[]
}
